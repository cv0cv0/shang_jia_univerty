<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_light"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">

        <LinearLayout
            android:id="@+id/view_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/item_margin"
                android:text="@string/select_service_goods_changs"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large" />

            <com.rubu.view.AutoListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginRight="@dimen/item_margin"
                android:divider="@color/bg_color"
                android:dividerHeight="2dp" />

            <LinearLayout
                android:id="@+id/additional_service_ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/item_margin"
                android:text="@string/additional_services"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large" />

            <com.rubu.view.AutoListView
                android:id="@+id/list_view_additional_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginRight="@dimen/item_margin"
                android:divider="@color/bg_color"
                android:dividerHeight="2dp" />
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/item_margin"
                android:text="@string/other_cost"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large" />

            <RelativeLayout
                android:visibility="invisible"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginRight="@dimen/item_margin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/apply_kp_cost"
                    android:textColor="@color/red_dark"
                    android:textSize="@dimen/text_large" />

                <CheckBox
                    android:id="@+id/checkbox_apply_kp_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_total_service_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_margin"
                android:textColor="@color/red_dark"
                android:textSize="@dimen/text_small" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginRight="@dimen/item_margin"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_login_btn_shape_gray"
                android:text="@string/confirm"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_large" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>