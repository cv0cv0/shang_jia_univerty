package com.rubu.base;

import android.support.v4.app.Fragment;
import android.support.v4.app.FragmentManager;
import android.support.v4.app.FragmentPagerAdapter;

import java.util.List;

/**
 * Created by liuhaizhu on 2017/3/1.
 */

public class TabFragAdapter extends FragmentPagerAdapter {
    private String[] mTitles;
    private List<Fragment> mFrags;

    public TabFragAdapter(FragmentManager fm, String[] titles, List<Fragment> frags) {
        super(fm);
        mTitles = titles;
        mFrags = frags;
    }

    @Override
    public Fragment getItem(int position) {
        return mFrags.get(position);
    }

    @Override
    public CharSequence getPageTitle(int position) {
        return mTitles[position];
    }


    @Override
    public int getCount() {
        if (mTitles == null || mTitles.length == 0 || mFrags == null || mFrags.size() == 0)
            return 0;
        return mTitles.length;
    }
}
