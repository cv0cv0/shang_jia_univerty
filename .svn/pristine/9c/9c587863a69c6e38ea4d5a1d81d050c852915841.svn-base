    private void init(Context context,AttributeSet attrs) {
        TypedArray a = context.obtainStyledAttributes(attrs, R.styleable.LRecyclerView);
        for (int i = 0, count = a.getIndexCount(); i < count; i++) {
            int attr = a.getIndex(i);
            if (attr == R.styleable.LRecyclerView_isHome) {
                mIsHome = a.getBoolean(attr, false);
            }
        }
        a.recycle();
        mContext = context;
        if (pullRefreshEnabled) {
            mRefreshHeader = new ArrowRefreshHeader(getContext(),mIsHome);
            mRefreshHeader.setOnHeaderPullListener(this);
            mRefreshHeader.setProgressStyle(mRefreshProgressStyle);
        }
        LoadingFooter footView = new LoadingFooter(getContext());
        mFootView = footView;
        mFootView.setVisibility(GONE);
        setFocusable(false);
        setFocusableInTouchMode(false);
    }

    @Override
