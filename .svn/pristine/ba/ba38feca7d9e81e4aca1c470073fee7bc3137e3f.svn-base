public class RemarkerListAdapter extends BaseListAdapter<RemarkerModel> {
    public RemarkerListAdapter(Context context, List<RemarkerModel> list) {
        super(context, list);
    }

    @Override
    public View initView(RemarkerModel model, View convertView, ViewGroup parent) {
        ViewHolder viewHolder;
        if (convertView == null) {
            convertView = LayoutInflater.from(context).inflate(R.layout.item_remark_list, null);
            viewHolder = new ViewHolder();
            viewHolder.mTitle = (TextView) convertView.findViewById(R.id.remark_title);
            viewHolder.mContent = (TextView) convertView.findViewById(R.id.remark_content);
            viewHolder.mOperater = (TextView) convertView.findViewById(R.id.remarker_operater);
            viewHolder.mTime = (TextView) convertView.findViewById(R.id.remarker_operete_time);
            convertView.setTag(viewHolder);
        } else {
            viewHolder = (ViewHolder) convertView.getTag();
        }
        // 设置备注标题
        viewHolder.mTitle.setText(model.getmTitle());
        // 设置备注内容
        if (!StringUtil.isEmpty(model.getmContent())) {
            viewHolder.mContent.setText(model.getmContent());
        }else {
            viewHolder.mContent.setText("");
        }
        // 设置备注操作人
        if (!StringUtil.isEmpty(model.getmOperater())) {
            viewHolder.mOperater.setText("操作人: " + model.getmOperater());
        }
        // 设置备注操作时间
        if (!StringUtil.isEmpty(model.getmOperateTime())) {
            viewHolder.mTime.setText("操作时间: " + model.getmOperateTime());
        }
        return convertView;
    }

    class ViewHolder {
        TextView mTitle;
        TextView mContent;
        TextView mOperater;
        TextView mTime;
    }
}
