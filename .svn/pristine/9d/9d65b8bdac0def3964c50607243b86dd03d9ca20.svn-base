public class FinishTitleItemView extends ItemViewBinder<FinishOrderTitleBean, FinishTitleItemView.ViewHolder> {
    private OnItemClickListenner mOnclick;

    @NonNull
    @Override
    protected ViewHolder onCreateViewHolder(@NonNull LayoutInflater inflater, @NonNull ViewGroup parent) {
        View view = inflater.inflate(R.layout.item_finish_order_title, parent, false);
        return new ViewHolder(view);
    }

    @Override
    protected void onBindViewHolder(@NonNull ViewHolder holder, @NonNull final FinishOrderTitleBean item) {
        // 设置名字
        holder.id_order_id.setText(item.getOrder_title_name());
        // 设置工单完工时间
        if (!StringUtil.isEmpty(item.getFinished_time())){
            holder.name.setText(TimeUtil.castTime(item.getFinished_time(), TimeUtil.TIME_UNIT_STR, TimeUtil.TIME_UNIT_YEAR_CN));
        }
        // title点击事件
        holder.itemView.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if (mOnclick != null) {
                    mOnclick.onItemClick(item);
                }
            }
        });
    }

    public void setOnItemClickListenner(OnItemClickListenner onclickListenner) {
        this.mOnclick = onclickListenner;
    }

    public interface OnItemClickListenner {
        void onItemClick(FinishOrderTitleBean bean);
    }

    static class ViewHolder extends RecyclerView.ViewHolder {
        // 工单Id
        TextView id_order_id;
        // 客户名称
        TextView name;


        ViewHolder(View itemView) {
            super(itemView);
            id_order_id = (TextView) itemView.findViewById(R.id.id_order_id);
            name = (TextView) itemView.findViewById(R.id.id_name);
        }
    }
}
