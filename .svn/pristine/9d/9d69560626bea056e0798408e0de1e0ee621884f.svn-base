<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="安装单"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_service_num"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_order_type"
            android:text="x1"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_large" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_service_num"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yes_no_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货"
                android:textColor="@color/ucrop_color_widget_active"
                android:textSize="@dimen/title_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/yes_no_urge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="催"
                android:textColor="@color/ucrop_color_widget_active"
                android:textSize="@dimen/title_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/yes_no_quickness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="极速安装"
                android:textColor="@color/ucrop_color_widget_active"
                android:textSize="@dimen/title_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_flag"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_medium" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_buyer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="名字"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_buyer_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="电话号码"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/item_margin"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/tv_order_type"
        android:layout_toLeftOf="@+id/tv_time_flag"
        android:layout_toRightOf="@+id/tv_order_type"
        android:layout_toStartOf="@+id/tv_time_flag"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="杭州市富阳区"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_buyer_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/item_margin"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/tv_order_type"
        android:layout_toLeftOf="@+id/tv_time_flag"
        android:layout_toRightOf="@+id/tv_order_type"
        android:layout_toStartOf="@+id/tv_time_flag"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="详细地址"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/item_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2017-01-28 您已接单"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_medium" />


        <TextView
            android:id="@+id/btn_action"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_marginLeft="6dp"
            android:background="@color/blue"
            android:text="签到复查"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_medium" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/bg_color" />
</LinearLayout>
