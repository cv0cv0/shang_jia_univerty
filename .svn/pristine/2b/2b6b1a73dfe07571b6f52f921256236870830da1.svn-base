<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:visibility="gone">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/item_margin"
        android:paddingRight="@dimen/item_margin">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_question" />

        <com.rubu.view.AutoGridView
            android:id="@+id/grid_view_actions"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:numColumns="4" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_fail_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pick_finsih"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/order_fail_hint"
        android:textColor="@color/red_dark"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#ffffff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp" />
</LinearLayout>