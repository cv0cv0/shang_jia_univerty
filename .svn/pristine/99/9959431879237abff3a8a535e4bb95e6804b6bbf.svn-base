<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/service_code_ll"
    android:visibility="gone"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_margin"
        android:paddingRight="@dimen/item_margin">

        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hexiaoorder"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sendcode"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/service_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_blue" />
            </LinearLayout>
            <TextView
                android:id="@+id/service_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/servicepeople"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/service_code_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inputservicecode"/>
            <TextView
                android:id="@+id/reisseu_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red_dark"
                android:textColor="@color/white"
                android:padding="4dp"
                android:text="@string/reissuecode"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
</LinearLayout>