def localProperties = new Properties()
def localPropertiesFile = rootProject.file('local.properties')
if (localPropertiesFile.exists()) {
    localPropertiesFile.withReader('UTF-8') { reader ->
        localProperties.load(reader)
    }
}

def flutterRoot = localProperties.getProperty('flutter.sdk')
if (flutterRoot == null) {
    throw new GradleException("Flutter SDK not found. Define location with flutter.sdk in the local.properties file.")
}

// 表示这是一个应用程序模块 (可直接运行)
apply plugin: 'com.android.application'
// 代表的是一个库模块 (只能依赖于其他的程序运行)
//apply plugin: 'com.android.library'
apply plugin: 'kotlin-android'
apply plugin: 'kotlin-android-extensions'
apply plugin: 'kotlin-kapt'
apply from: "$flutterRoot/packages/flutter_tools/gradle/flutter.gradle"

android {
    // 项目编译版本
    compileSdkVersion 27
    // 项目更多细节配置
    defaultConfig {
        //8080的名字
        applicationId "com.rubu"
        // 最低兼容版本
        minSdkVersion 16
        targetSdkVersion 27
        // 开发版本,已经做过测试 (比如,如果你需要6.0的运行权限,但是你却设置低于6.0,,那么系统不会运行时引用这个权限   )
        versionCode 1
        versionName "3.0.0"
        testInstrumentationRunner "android.support.test.runner.AndroidJUnitRunner"
        multiDexEnabled true
//        ndk {
//            // 设置支持的SO库架构
//            abiFilters 'armeabi'  .'armeabi-v7a', 'x86_64'// 'arm64-v8a'
//        }
    }
    dexOptions {
        javaMaxHeapSize "4g"
    }
    sourceSets {
        main {
            jni.srcDirs = []
            jniLibs.srcDirs = ['libs']
            java.srcDirs += 'src/main/kotlin'
        }
    }
    lintOptions {
        disable 'InvalidPackage'
    }
    // 生成安装包的一些配置
    buildTypes {
        // 正式包的配置
        release {
            // 是否启用混淆
            minifyEnabled false
            // 启用混淆时候用到的规则文件
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.txt'
        }
        // 测试安装的配置
        debug {
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.txt'
            minifyEnabled false
        }
    }
    signingConfigs {
        debug {
            storeFile file("../shangjia.jks")
            storePassword "shangjia"
            keyAlias "shangjia"
            keyPassword "shangjia"
        }
        signConfigs {
            storeFile file('../shangjia.jks')
            storePassword 'shangjia'
            keyAlias 'shangjia'
            keyPassword 'shangjia'
        }
    }
}
repositories {
    flatDir {
        dirs 'libs'
    }
//    google()
}
flutter {
    source '../..'
}
// 制定项目的依赖关系,本地依赖(本地文件,jar文件),库依赖(对应项目的应用库),远程依赖(网上开源库的依赖)
