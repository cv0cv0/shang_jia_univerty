<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_36"
    android:layout_marginLeft="@dimen/check_order_item_margin_left"
    android:layout_marginRight="@dimen/check_order_item_margin_right"
    android:background="@drawable/bg_check_title"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_check_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/check_order_item_padding_left"
        android:src="@mipmap/check_ing" />

    <TextView
        android:id="@+id/tv_check_statue"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/check_order_item_padding_right"
        android:layout_marginRight="@dimen/check_order_item_padding_right"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="2018-04-04 审核中"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
